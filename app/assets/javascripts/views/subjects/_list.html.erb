<div class="card">
  <div class="card-content">
    <div class="row">
      <div class="col s2">
        <span class="card-title title">Asignaturas</span>
      </div>
      <div class="input-field col s4 offset-s6">
        <input id="search" type="text" class="validate" ng-model="search">
        <label for="search">Buscar asignatura</label>
      </div>
    </div>
    <ul class="li-divided">
      <li ng-repeat="subject in subjects | filter: search">
        <h5>{{subject.name}}</h5>
      </li>
    </ul>
  </div>
</div>