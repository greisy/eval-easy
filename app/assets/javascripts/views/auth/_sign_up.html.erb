<div class="contenedor">
  <div class="z-depth-1 grey lighten-4 row auth-box">
    <div class="row">
      <div class="col s12 center-align">
        <%= image_tag("logo", class: "logo") %>
        <h5 class="condensed" style="min-width:300px;">Registrarme</h5>
      </div>
    </div>
    <form class="col s12" name="sign" ng-submit="signUp()" novalidate>
      <div class="row">
        <div class="input-field col s12" ng-class="{'card-panel red darken-4': error}" ng-if="error">
          <span class="white-text">{{error}}</span>
        </div>
      </div>
      <!--Name-->
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="text" name="name" id="name" ng-model="user.name" required>
          <label for="name" data-error="Formato incorrecto">Nombre:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="text" name="last_name" id="last_name" ng-model="user.last_name" required>
          <label for="last_name" data-error="Formato incorrecto">Apellido:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="text" name="identity_card" id="identity_card" ng-model="user.identity_card" required>
          <label for="identity_card" data-error="Formato incorrecto">Cédula:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="text" name="phone" id="phone" ng-model="user.phone" required>
          <label for="phone" data-error="Formato incorrecto">Teléfono:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <dropdown-resource resources="institutions" show-information="Ingrese el nombre de la institución" show-error="Verificar nombre de la institución" model="user.institution_id"></dropdown-resource>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="email" name="email" id="email" ng-model="user.email" required>
          <label for="email" data-error="Correo invalido">Correo Electrónico:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="password" id="pwd" ng-model="user.password" pattern= ".{8,}" required name="passwordName">
          <label for="pwd" data-error="Su contraseña debe tener mas de 8 dígitos">Contraseña:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="password" id="passwordConfirmation" ng-model="user.passwordConfirmation"
                 name="myPasswordConfirmation" match="user.password" match-ignore-empty="true"
                 required ng-class="{'invalid':sign.myPasswordConfirmation.$error.match}"
                 ng-blur="checkMatch()">
          <label for="pwd" data-error="Las contraseñas no coinciden, por favor verifique">Confirmar contraseña:</label>
        </div>
      </div>
      <div class="center-align">
        <div class="row">
          <button type="submit" class="col s12 btn btn-large waves-effect indigo teal darken-4" ng-disabled="!canSubmitSign()">Iniciar Sesión
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col s8 offset-4">
          <a ui-sref="sign_in">Iniciar Sesión</a>
        </div>
      </div>
    </form>
  </div>
</div>





