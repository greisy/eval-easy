<div class="card">
  <div class="card-content">
      <div class="row">
        <form class="col s12" ng-submit="addNewTeacher()">
          <div class="row">
            <div class="col s12">
              <span class="card-title title">Agregar Agente Evaluador</span>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s8">
              <div class="row">
                <div class="input-field col s12">
                  <input id="name" type="text" class="validate" ng-model="teacher.name">
                  <label for="name">Nombre</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="last_name" type="text" class="validate" ng-model="teacher.last_name">
                  <label for="last_name">Apellido</label>
                </div>
              </div>
            </div>
            <div class="input-field col s4">
              <image-upload></image-upload>
            </div>
          </div>
          <div class="center-align">
            <div class="row">
              <button type="submit" class="col s12 btn btn-large waves-effect indigo teal darken-4">
                Agregar Agente Evaluador
              </button>
            </div>
          </div>
        </form>
      </div>

  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('select').material_select();
  });
</script>
