source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.6'
# Use sqlite3 as the database for Active Record
#gem 'sqlite3'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc
# Seedbank allows you to structure your Rails seed data instead of having it all dumped into one large file
gem 'seedbank'
#------------- EVALEASY PROJECT'S GEMS------------
#A simple, fast Mysql library for Ruby, binding to libmysql
gem 'mysql2'

## DEVISE
gem 'devise'

#It uses to improve ripl(irb)'s default inspect output
gem 'hirb'

#Sprockets Rails
gem 'sprockets-rails', :require => 'sprockets/railtie'

#jQuery 
gem 'jquery-rails', '~> 4.1', '>= 4.1.1'

gem 'angular-rails-templates'

## support CSRF in the frontend (angular)
gem 'angular_rails_csrf'

group :development, :test do
  gem 'rspec-rails'
  gem "factory_girl_rails", "~> 4.0"
  gem 'faker'
  gem 'capybara', '~> 2.7', '>= 2.7.1'
  gem 'selenium-webdriver'
  gem 'byebug'
end

